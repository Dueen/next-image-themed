{
  "name": "next-image-themed",
  "version": "1.0.0",
  "description": "A Next.js Image Component that allows you to shows a different image in light and dark-mode, based on the users preference.",
  "license": "ISC",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dueen/next-image-themed"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "next",
    "image",
    "themed",
    "light-mode",
    "dark-mode",
    "react"
