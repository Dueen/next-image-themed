    "build:cjs": "tsc --module commonjs --outDir dist"
  },
  "dependencies": {
    "next": "^12.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "next": "10 || 11 || 12",
    "react": "^16.8 || 17 || 18",
    "react-dom": "^16.8 || 17 || 18"
  }
